{{#form-field propertyName
    class="custom-field"
    classNames=fieldClasses
    errorClasses=errorClasses
    hintClasses=hintClasses
    inputClasses=inputClasses
    labelClasses=labelClasses
    object=object
    form=form
    hint=hint
    label=label
    control=control
    update=(action update) as |f|}}
  {{#if component}}
    {{component component f=f}}
  {{else if hasBlock}}
    {{yield f}}
  {{else}}
    {{f.label required=required}}
    {{f.control
        accesskey=accesskey
        autocomplete=autocomplete
        autofocus=autofocus
        autosave=autosave
        dir=dir
        disabled=disabled
        hidden=hidden
        inputmode=inputmode
        lang=lang
        list=list
        max=max
        maxlength=maxlength
        min=min
        minlength=minlength
        multiple=multiple
        pattern=pattern
        placeholder=placeholderText
        readonly=readonly
        required=required
        size=size
        spellcheck=spellcheck
        step=step
        tabindex=tabindex
        title=title
    }}
    {{f.errors}}
    {{f.hint}}
  {{/if}}
{{/form-field}}

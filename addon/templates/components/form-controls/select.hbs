{{#if includeBlank}}
  <option value="">{{promptText}}</option>
{{/if}}
{{#if groupLabelPath}}
  {{#each optionGroups as |optionGroup|}}
    <optgroup label={{optionGroup.groupName}}>
      {{#each optionGroup.options as |option|}}
        {{form-controls/select-option
            selected=value
            option=option
            optionValuePath=optionValuePath
            optionLabelPath=optionLabelPath}}
      {{/each}}
    </optgroup>
  {{/each}}
{{else}}
  {{#each options as |option|}}
    {{form-controls/select-option
        selected=value
        option=option
        optionValuePath=optionValuePath
        optionLabelPath=optionLabelPath}}
  {{/each}}
{{/if}}
